<% content_for :title, "New Transaction" %>
<div style="margin: 5% 0%;">
    <div class="col-md-4 col-xl-6 offset-xl-3">
    <h1 style="font-size: xx-large;"><i class="fas fa-money-check" style="padding-right: 5px;"></i>New Transaction</h1>
        <%= form_for [:admin, @transaction] do |f| %>
        <%= render :partial =>'form', :locals => {:f => f}  %>
        <tr>
            <td>Date Created</td>
            <%= f.datetime_field :created_at, :value => DateTime.now, class: "border rounded-0 form-control", style: "margin-bottom: 15px;", placeholder: "Created At", required: true %>
        </tr>
        <%= f.submit "Create", class:"btn btn-lg btn-info", style: "width: 100%;" %>
        <% end %>
    </div>
</div>