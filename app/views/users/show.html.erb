<% content_for :title, "User Page" %>
<div style="padding-right: 0;padding-left: 0;padding-top: 5%;">
    <div class="container">
        <div class="row d-md-flex justify-content-md-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center mb-0">Personal and address details</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Here you can check and update your personal and address details so that we know how to contact you.</p>
                        <div class="card"></div>
                        <div style="padding-top: 5px;padding-bottom: 5px;">
                            <!-- table displaying personal details -->
                            <a class="btn card" style="background-color: rgba(0,0,0,.03);" data-toggle="collapse" aria-expanded="true" aria-controls="collapse-1" href="#collapse-1">
                                <h5 class="mb-0">Personal Details</h5>
                            </a>
                            <div class="collapse show" id="collapse-1" style="padding-top: 10px;">
                                <div class="table-responsive" style="height: 380px;">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>First Name</td>
                                                <td class="text-capitalize"><%= @user.fname %></td>
                                            </tr>
                                            <tr>
                                                <td>Last Name</td>
                                                <td class="text-capitalize"><%= @user.lname %></td>
                                            </tr>
                                            <tr>
                                                <td>User Name</td>
                                                <td><%= @user.username %></td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><%= @user.email %></td>
                                            </tr>
                                            <tr>
                                                <td>Mobile Number</td>
                                                <td><%= @user.phoneNumber %></td>
                                            </tr>
                                            <tr>
                                                <td>Date of birth</td>
                                                <td><%= @user.DOB %></td>
                                            </tr>
                                            <tr>
                                                <td>Address</td>
                                                <td><%= @user.address %></td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <%=link_to('Edit Profile', edit_user_path(@user), :class => 'btn btn-lg btn-warning', style: "width: 100%; margin-top: 2%")%>
                        <%=link_to("View Accounts", accounts_url,  :class => "btn btn-lg btn-info", style: "width: 100%;  margin-top: 2%") %>
                        <%=link_to("View all Transactions", transactions_url,  :class => "btn btn-lg btn-outline-info", style: "width: 100%;  margin-top: 2%") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
